<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_status_bar_replacement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@color/colorStart" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tv_article_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/Black"
                android:textSize="26sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_article_snippet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_article_header"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:textColor="@color/Gray"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_article_preview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/tv_article_snippet"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/iv_article_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@id/iv_article_preview"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/ic_share"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_article_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_article_share"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:textColor="@color/Black"
                android:textSize="19sp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>